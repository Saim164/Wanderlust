<% layout("/layouts/boilerplate") %>
    
<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
  }
  .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.5;
    flex: 1 1 50px;
  }

  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }

  .filter p{
    font-size: 0.8rem;
  }

  .tax-info{
    display: none;
  }

  .tax-toggle{
    border: 1px solid rgba(0, 0, 0, 0.411) ;
    border-radius: 1rem;
    height: 3rem;
    padding: 0.5rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
    font-size: 0.9rem;
    color: rgba(0, 0, 0, 0.774);
  }

  @media (max-width: 1200px) {
    .ship , .snow {
      display: none;
    }
    .filter{
      margin-right: 1.7rem;
    }
  }

   @media (max-width: 995px) {
    .farm , .camp , .pool{
      display: none;
    }
    .tax-toggle{
      padding: 0.4rem;
    }
    .filter{
      margin-right: 1.4rem;
    }
  } 

  @media (max-width: 780px) {
    .castle , .mountain {
        display: none;
    }
    .tax-toggle{
      padding: 0.3rem;
    }
    .filter{
      margin-right: 1.5rem;
    }
  }

  @media (max-width: 540px) {
    .city {
      display: none;
    }
    .tax-toggle{
      padding: 0.2rem;
    }
    .filter{
      margin-right: 1rem;
    }
  }

  @media (max-width: 460px) {
    .filter{
      margin-right: 0.8rem;
    }
    .tax-toggle{
      padding: 0.15rem;
    }
  }

   @media (max-width: 394px) {
    .room{
      display: none;
    }
    .tax-toggle{
      padding: 0.1rem;
    }
    .filter{
      margin-right: 0.6rem;
    }
  }
  
  @media (max-width:340px){
    .fire{
      display: none;
    }
    .tax-toggle{
      margin-top: 2rem;
    }
    .filter{
      margin-right: 0.4rem;
    }
  }

</style>

    <div id="filters">
      <div class="filter fire">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter room">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter city">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>
      <div class="filter mountain">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>
      <div class="filter castle">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castle</p>
      </div>
      <div class="filter pool">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </div>
      <div class="filter camp">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter farm">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter snow">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Artics</p>
      </div>
      <div class="filter ship">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>

      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
       <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
       <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
     </div>
      </div>

    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

    <%for(let listing of allListings){%>
      <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card" >

  <img 
  src="<%= listing.image.url %>" 
  class="card-img-top"
  alt="listing-image"
  style="height: 20rem;">
  <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text">
        <b><%= listing.title %></b><br>
        <%= listing.price.toLocaleString('en-IN')%> pkr / night  %>
        <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
    </p>
  </div>
</div>
</a>
<%}%>
</div>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click" , ()=>{
    let taxInfo = document.getElementsByClassName("tax-info");
    for(info of taxInfo){
      if(info.style.display != "inline"){
      info.style.display = "inline";
      }else{
      info.style.display = "none";
      }
    }
    })
</script>


